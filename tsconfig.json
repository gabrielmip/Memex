{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "target": "ESNext",
        "module": "ES2015",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "outDir": "tmp",
        "paths": {
            "storex": ["external/storex"],
            "storex/*": ["external/storex/lib/*"],
            "storex-backend-dexie": ["external/storex-backend-dexie"],
            "memex-stemmer": ["external/memex-stemmer"]
        },
        "lib": ["es2017", "dom", "esnext.asynciterable"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "./src/**/*.js", "./src/**/*.jsx"]
}
